<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PdfReaderNeo" parent="Theme.Space">
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:ignore="NewApi">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.PdfReaderNeo.ActionButtonOverflow</item>
        <item name="android:popupMenuStyle">@style/Theme.PdfReaderNeo.PopupMenu.Light</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="Theme.PdfReaderNeo.Dark" parent="Theme.Space">
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:ignore="NewApi">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.PdfReaderNeo.ActionButtonOverflow.Dark</item>
        <item name="android:popupMenuStyle">@style/Theme.PdfReaderNeo.PopupMenu.Dark</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

    <style name="Theme.PdfReaderNeo.ActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_options</item>
    </style>

    <style name="Theme.PdfReaderNeo.ActionButtonOverflow.Dark" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_options_dark</item>
    </style>

    <style name="Theme.PdfReaderNeo.TabText" parent="Theme.Space">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Theme.PdfReaderNeo.Indicator" parent="Theme.Space.Indicator">
        <item name="android:color">@color/colorTransparent</item>
        <item name="android:width">@dimen/_56sdp</item>
        <item name="android:height">@dimen/_42sdp</item>
        <item name="shapeAppearance">@style/Theme.Space.Indicator.Shape</item>
    </style>

    <style name="Theme.PdfReaderNeo.BottomNavigationView.Active" parent="Theme.Space.BottomNavigationView.Active">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.PdfReaderNeo.BottomNavigationView.InActive" parent="Theme.Space.BottomNavigationView.InActive">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.PdfReaderNeo.Dialog" parent="Theme.Space.Dialog">
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Theme.PdfReaderNeo.PopupMenu.Light" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">@color/colorCardBackground</item>
        <item name="popupMenuBackground">@drawable/ic_bg_rounded_8sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:popupElevation">@dimen/_1sdp</item>
    </style>

    <style name="Theme.PdfReaderNeo.PopupMenu.Dark" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">#33363A</item>
        <item name="popupMenuBackground">@drawable/ic_bg_rounded_dark_8sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:popupElevation">@dimen/_1sdp</item>
    </style>

</resources>