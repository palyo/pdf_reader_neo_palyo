<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_bg_rounded_sheet"
    android:paddingBottom="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:alpha="0.25"
        app:cardBackgroundColor="@color/colorIconOpacity"
        app:cardElevation="@dimen/_0sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="@dimen/_0sdp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_title"
        style="@style/TextBold"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="@string/sheet_title_sort"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_handle" />

    <View
        android:id="@+id/view_separator"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/colorTextOpacity24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_date_modified"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="By modified"
        android:textSize="@dimen/_11ssp"
        app:icon="@drawable/ic_button_selector"
        app:iconGravity="end"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_name"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="By name"
        android:textSize="@dimen/_11ssp"
        app:icon="@drawable/ic_button_selector"
        app:iconGravity="end"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_date_modified" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_size"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="By size"
        android:textSize="@dimen/_11ssp"
        app:icon="@drawable/ic_button_selector"
        app:iconGravity="end"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_title_order"
        style="@style/TextBold"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="@string/sheet_title_sort_order"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_size" />

    <View
        android:id="@+id/view_separator2"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/colorTextOpacity24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_order" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_ascending"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="Ascending"
        android:textSize="@dimen/_11ssp"
        app:icon="@drawable/ic_button_selector"
        app:iconGravity="end"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separator2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sort_descending"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:text="Descending"
        android:textSize="@dimen/_11ssp"
        app:icon="@drawable/ic_button_selector"
        app:iconGravity="end"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_ascending" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_positive"
        style="@style/MaterialButtonAccent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="@string/menu_sort"
        android:textSize="@dimen/_11ssp"
        app:backgroundTint="@color/colorRed"
        app:cornerRadius="@dimen/_8sdp"
        app:fontFamily="@font/semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_negative"
        app:layout_constraintTop_toBottomOf="@+id/sort_descending" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_negative"
        style="@style/MaterialButtonTransparent"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:text="@string/button_cancel"
        android:textSize="@dimen/_11ssp"
        app:backgroundTint="@color/colorCardBackground"
        app:cornerRadius="@dimen/_8sdp"
        app:fontFamily="@font/semi_bold"
        app:layout_constraintEnd_toStartOf="@+id/button_positive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_descending" />

</androidx.constraintlayout.widget.ConstraintLayout>