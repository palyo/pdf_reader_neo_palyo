<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_12sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_0sdp"
        android:id="@+id/layout_gpu_view"
        android:layout_height="@dimen/_0sdp"
        app:layout_constraintBottom_toBottomOf="@id/image_crop"
        app:layout_constraintEnd_toEndOf="@id/image_crop"
        app:layout_constraintStart_toStartOf="@id/image_crop"
        app:layout_constraintTop_toTopOf="@id/image_crop">

        <ImageView
            android:id="@+id/gpu_image_view"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="@dimen/_0sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <me.pqpo.smartcropperlib.view.CropImageView
        android:id="@+id/image_crop"
        android:layout_width="@dimen/_0sdp"
        android:layout_height="@dimen/_0sdp"
        android:adjustViewBounds="true"
        app:civLineColor="@color/colorAccent"
        app:civMagnifierCrossColor="@color/colorAccent"
        app:civPointColor="@color/colorAccent"
        app:civPointFillColor="@color/colorAccent"
        app:civShowEdgeMidPoint="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
